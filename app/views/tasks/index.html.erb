<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1 class="text-3xl font-bold mb-4">Tasks</h1>

<div id="tasks" class="space-y-4">
  <% @tasks.each do |task| %>
    <div class="p-4 border rounded-lg shadow bg-white">
      <%= render task %>
      <p class="mt-2">
        <%= link_to "Show this task", task, class: "text-blue-500 hover:underline" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New task", new_task_path, class: "mt-4 inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
